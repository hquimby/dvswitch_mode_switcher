<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <title>Edit TG's</title>
</head>
<body>
<%- include('partials/header') %>
<div class="container">
    <h1 class="mt-5">Edit TG's</h1>
    <div class="form-group">
        <label for="mode">Select Mode</label>
        <select class="form-control" id="mode" onchange="loadTalkgroups()">
            <% modes.forEach(mode => { %>
                <option value="<%= mode.name %>"><%= mode.name %></option>
            <% }) %>
        </select>
    </div>
    <div id="talkgroups-container">
        <h3>Talkgroups for <span id="selected-mode"><%= modes[0].name %></span></h3>
        <form id="talkgroup-form">
            <table class="table">
                <thead>
                <tr>
                    <th>Alias</th>
                    <th>TGID</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="talkgroups-list">
                <% modes[0].talkgroups.forEach(tg => { %>
                    <tr>
                        <td><input type="text" class="form-control" name="alias" value="<%= tg.alias %>"></td>
                        <td><input type="text" class="form-control" name="tgid" value="<%= tg.tgid %>"></td>
                        <td><button type="button" class="btn btn-danger" onclick="deleteTalkgroup(this)">Delete</button></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            <button type="button" class="btn btn-primary" onclick="addTalkgroup()">Add Talkgroup</button>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/theme-toggle.js"></script>
<script src="/js/edit.js"></script>
</body>
</html>